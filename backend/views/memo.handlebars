<div class="container">

  {{> messages}}

  <div class="row justify-content-center mt-5">
    <form action="/api/memo/new" method="POST" id="new-memo-form">
      <div class="form-group">
        <textarea name="memo-body" id="new-memo-body" class="form-control" placeholder="Write your memo here...">
        </textarea>
      </div>
      <div class="form-group">
        <input type="text" name="memo-tags" placeholder="Memo tags" class="form-control" id="new-memo-tags"
          spellcheck="false" autocomplete="off">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Save memo</button>
      </div>
  </div>
  </form>
</div>

</div>